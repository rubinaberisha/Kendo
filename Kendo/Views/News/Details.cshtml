@model News

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .left-section {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            background-color: #f9f9f9;
            border-right: 1px solid #ddd;
        }

            .left-section img {
                max-width: 100%;
                height: auto;
                margin-bottom: 20px;
                border-radius: 8px;
            }

            .left-section h1 {
                font-size: 2rem;
                margin: 0;
                color: #333;
            }

        .right-section {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .right-section h4 {
                font-size: 1.5rem;
                margin-bottom: 20px;
                color: #555;
            }

            .right-section .publish-date {
                font-size: 0.9rem;
                color: #888;
                margin-bottom: 20px;
            }

            .right-section p {
                font-size: 1rem;
                color: #444;
                margin-bottom: 20px;
            }

            .right-section .back-btn {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s ease;
            }

                .right-section .back-btn:hover {
                    background-color: #0056b3;
                }
        {
            flex-direction: column;
        }

        .left-section, .right-section {
            flex: 1;
            border: none;
            text-align: center;
        }

        .left-section {
            align-items: center;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Left Section: Image and Title -->
        <div class="left-section">
            <img src="@Model.ImagePath" alt="@Model.Title" />
            <h1>@Model.Title</h1>
        </div>

        <!-- Right Section: Subtitle and Details -->
        <div class="right-section">
            <h4>@Model.Subtitle</h4>
            <span class="publish-date">Published on: @Model.PublishDate.ToString("MMMM dd, yyyy")</span>
            <p>@Model.Content</p>

            <!-- Back Button -->
            <a href="/News" class="back-btn">Back to News</a>
        </div>
    </div>
</body>
</html>
